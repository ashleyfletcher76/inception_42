[server]

# specify teh SQL file to initialize the database on start up -hence the copy in the dockerfile
init_file = /etc/mysql/init.sql

# set the user s root for running MariaDb processes
user                    = root

# define location of PID file for MariaDb
pid-file                = /run/mysqld/mysqld.pid

# set the vase directory for MAriadb install
basedir                 = /usr

# define the data direcotry for databases to be stored
datadir                 = /var/lib/mysql

# temp files store here
tmpdir                  = /tmp

# bind MariaDB to all IP addresses
bind-address            = 0.0.0.0

# set log expiry date no onlder than 10 right now
expire_logs_days        = 10
